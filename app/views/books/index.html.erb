<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <th><%= image_tag @user.get_profile_image(100,100) %></th>

        <table class="table">
          <tbody>
            <tr></tr>
    
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
    
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        
          <div class="row">
          <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block " do %>
           <i class="fas fa-user-cog"></i> 
          <% end %>
        </div>


      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
  
        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title, class: "form-control book_title" %>
        </div>
        
        <div class="form-group">
          <label>Opinion</label>
          <%= f.text_area :opinion, class: "form-control book_body" %>
        </div>
        
        <div>
          <%= f.submit "create book", class: "btn btn-success" %>
        </div>
        
        <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </thead>
          
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <th><%= image_tag book.get_profile_image(50,50) %></th>
              <th><%= book.title %></th>
              <th><%= book.opinion %></th>
              
            </tr>
          <% end %>
          </tbody>
        </table>
      
    </div>
  </div>
</div>

