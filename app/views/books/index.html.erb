<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "list", user: @user %>

      <h2 class="mt-3">New book</h2>
      <%= render "form", book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>
        
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <th>
              <%= link_to user_path(book.id) do %>
              <%= image_tag book.get_profile_image(50,50) %>
              <% end %>
            </th>
            
            <th>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </th>
            
            <th><%= book.opinion %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  
    

