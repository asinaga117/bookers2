<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <th><%= image_tag @user.get_profile_image(100,100) %></th>

        <table class="table">
          <tbody>
            <tr></tr>
    
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
    
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>

      <h2>New book</h2>
        <%= form_with model: @book do |f| %>
  
        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title, class: "form-control book_title" %>
        </div>
        
        <div class="form-group">
          <label>Opinion</label>
          <%= f.text_area :opinion, class: "form-control book_body" %>
        </div>
        
        <div>
          <%= f.submit "create book", class: "btn btn-success" %>
        </div>
        
        <% end %>

    </div>
  </div>
</div>